{
  "name": "Climate Genie!",
  "description": "A Google Chrome extension for identifying, highlighting and countering climate misinformation on major media sites!",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Kyle Herbertson and Alfie Chadwick",
  "permissions": [
		"tabs",
    "storage",
    "<all_urls>"
  ],
  "icons": {
	"48": "/assets/Icons/LilClimateGenie.png"
  },
    "background": {
    "scripts": ["/assets/js/background.js","/assets/js/test_to_run.js"],
    "persistent": false
  },
    "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "/assets/Icons/LilClimateGenie.png"
  }

}
