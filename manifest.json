{
  "name": "Climate Genie!",
  "description": "A Google Chrome extension for identifying, highlighting and countering climate misinformation on major media sites!",
  "version": "1.0",
  "manifest_version": 2,
  "author": "Kyle Herbertson and Alfie Chadwick",
  "permissions": [
	"tabs",
    "storage",
    "<all_urls>",
    "activeTab",
    "webNavigation"
  ],
  "icons": {
	"48": "/assets/Icons/Avatars/woo.png"
  },
    "background": {
    "scripts": ["/assets/js/background.js","/assets/js/check.js", "assets/js/parse.js", "assets/js/categorise.js", "assets/js/display.js"],
    "persistent": false
  },
  "web_accessible_resources": ["message.html"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "/assets/Icons/Avatars/woo.png",
    "default_script": "/assets/js/popup.js"
  },
  	"content_scripts" : [
		{
			"matches" : [
				"<all_urls>"
                 ],
                  "js" : ["/assets/js/content.js"]
        }
    ]
}
